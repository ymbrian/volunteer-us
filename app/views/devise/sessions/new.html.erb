
<div class="background-signin">
  <div class="container text-center" style="height: 100vh; transform: translateY(20%)">
    <div class="box-signin" style="height:500px; width:360px;">
      <div class="box-flex">
        <div class="box-infor">
          <h2>Log in</h2>
          <hr style="height:1px;border:none;border-top:1px solid white;" />
          <div class="row text-center"><!--
            <div class="col-xs-12 col-sm-offset-4 col-sm-4"> -->
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),defaults: { input_html: { class: "form-style" } }) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email, required: false, autofocus: true, input_html: { id: 'email' } %>
                  <%= f.input :password, required: false %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, "Log in", class: 'form-botton' %>
                </div>
              <% end %>
              <div class="box-link">
                <%= render "devise/shared/links" %>
            <!-- </div> -->
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
