<div class="banner" style="background-image: linear-gradient(-225deg, rgba(40, 75, 13, 0.11) 0%, rgba(59, 81, 39, 0.37) 50%), url('https://images.pexels.com/photos/398532/pexels-photo-398532.jpeg?w=940&h=650&auto=compress&cs=tinysrgb');">
  <div class="banner-content">
    <h1>Welcome To Volunteer Us!!</h1>
    <p>Find an event that speaks to you!</p>
    <div class="dropdown-where">
      <button class="dropbtn">Cities</button>
      <div class="dropdown-content">
      </div>
    </div>
    <div class="dropdown-dates">
      <button class="dropbtn">Dates</button>
      <div class="dropdown-content">
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="space" style="padding-top: 10px; padding-bottom: 10px;">
    <div class="heading" style="font-size: 15px; color: #2DB94D;">
      <h3>Top Upcoming Events:</h3>
    </div>
    <div class="row">
        <!-- insert <div class="card"> -->
        <% @featured_events.map do |event| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.pexels.com/photos/433452/pexels-photo-433452.jpeg?h=350&auto=compress&cs=tinysrgb');">
              <div class="card-category"><%= event.category %></div>
              <div class="card-description">
                <h2><%= link_to event.title, event_path(event) %></h2>
                <p><%= event.date.strftime("Date: %F") %></p>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
